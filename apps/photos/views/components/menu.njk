  }
]%}

<nav>
  {% for navLink in navLinks %}
    <a href="{{navLink.url}}" {{ 'class=active' if navLink.name == currentPage }}>{{navLink.name}}</a>
  {% endfor %}

  {% if req.user %}
    <a href="https://login.freestyledm2019.de/logout?redirectBack=https://photos.freestyledm2019.de">Logout</a>
