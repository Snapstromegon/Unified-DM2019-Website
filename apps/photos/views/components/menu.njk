      <h2>Admin</h2>
      <a href="/admin/upload" {{ 'class=active' if "upload" == currentPage }}>Upload</a>
    {% endif %}
  {%else%}
    <a href="https://login.freestyledm2019.de/?redirectBack=https://photos.freestyledm2019.de">Login</a>
  {% endif %}
</nav>