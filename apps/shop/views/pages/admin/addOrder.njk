{% set currentPage="Add Order" %}

{% extends "../../base.njk" %}

{% block css %}
<link rel="stylesheet" href="/css/shoppingCart.css">
<link rel="stylesheet" href="/css/listAllPayments.css">
{%endblock%}

{% block main %}
<div class="content">
    <form action="" method="post">
    <h1>User IUF ID</h1>
    <input type="number" name="iufId"/>
{%for shopItem in shopItems%}
  <div class="orderItemDetails">
    
    <h1>{{shopItem.label}}</h1>
    <h2 class="price">{{shopItem.price}}€</h2>
    <p class="description">{{shopItem.description}}</p>
  <table>
    <thead>
      <tr>
        <th>Größe</th>
        <th>Anzahl</th>
      </tr>
    </thead>
    <tbody>
    {% for option in shopItem.ShopItemOptions %}
      <tr>
        <td class="right">{{option.label}}</td>
        <td><input type="number" name='selectOption[#{{option.id}}]' id="" value="0" min=0></td>
      </tr>
    {%endfor%}
    </tbody>
  </table>
  </div>
  
    {%endfor%}
  <input type="submit" value="Bestellung speichern">
  </form>
</div>
{% endblock %}