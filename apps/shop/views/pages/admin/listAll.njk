{% set currentPage="Payment All" %}

{% extends "../../base.njk" %}

{% block css %}
<link rel="stylesheet" href="/css/shoppingCart.css">
<link rel="stylesheet" href="/css/listAllPayments.css">
{%endblock%}

{% macro maybeGrayedOutIcon(value, trueIcon='‚úîÔ∏è', falseIcon=trueIcon, shouldGrayscale=true) %}
<span {{"class=grayed" if not value and shouldGrayscale}}>{{trueIcon if value else falseIcon}}</span>
{% endmacro %}

{% macro orderStatusLinkOrText(text, role, link) %}
  {%if req.user.hasRole(role)%}
    <a href="{{link}}">{{text}}</a>
  {%else%}
    {{text}}
  {%endif%}
{%endmacro%}

{% macro orderStatus(order) %}
  <td>{{maybeGrayedOutIcon(order.hasToBePaid, "‚úîÔ∏è", "‚ùå")}}</td>
  <td>{{
    orderStatusLinkOrText(
      maybeGrayedOutIcon(
        order.isPayed, "‚úîÔ∏è", "‚ùå", shouldGrayscale = not order.hasToBePaid
      ),
      "Payment", 
      "/admin/payment/pay/" + order.id+"/"+(not order.isPayed)
    )}}</td>
  {%if order.isPayed%}
  <td>{{orderStatusLinkOrText(
    maybeGrayedOutIcon(
      order.isHandedOut, "‚úîÔ∏è", "‚ùå", shouldGrayscale = not order.isPayed
    ), 
    "Handout", 
    "/admin/handout/handout/" + order.id+"/"+(not order.isHandedOut)
  )}}</td>
  {%else%}
<td>{{maybeGrayedOutIcon(
      order.isHandedOut, "‚úîÔ∏è", "‚ùå", shouldGrayscale = not order.isPayed
    )}}</td>
  {%endif%}
  <td>{{orderStatusLinkOrText(
    maybeGrayedOutIcon(
      req.user.hasRole("OrderManager"), "üöÆ"
    ), 
    "OrderManager", 
    "/admin/orders/delete/" + order.id
  )}}</td>
{% endmacro %}

